@page
@model AutoMaegler.Pages.Cars.CreateCarModel
@{
    ViewData["Title"] = "Opret ny bil";
}

<h2>Opret ny bil</h2>

<!-- ✅ Tilføj valideringssupport -->
<partial name="_ValidationScriptsPartial" />
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Car.TypeOfCar" class="control-label"></label>
        <input asp-for="Car.TypeOfCar" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Brand" class="control-label"></label>
        <input asp-for="Car.Brand" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Model" class="control-label"></label>
        <input asp-for="Car.Model" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Color" class="control-label"></label>
        <input asp-for="Car.Color" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Fuel" class="control-label"></label>
        <input asp-for="Car.Fuel" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.ModelYear" class="control-label"></label>
        <input asp-for="Car.ModelYear" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Price" class="control-label"></label>
        <input asp-for="Car.Price" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Mileage" class="control-label"></label>
        <input asp-for="Car.Mileage" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.KmPrL" class="control-label"></label>
        <input asp-for="Car.KmPrL" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.TopSpeed" class="control-label"></label>
        <input asp-for="Car.TopSpeed" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Doors" class="control-label"></label>
        <input asp-for="Car.Doors" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.HorsePower" class="control-label"></label>
        <input asp-for="Car.HorsePower" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Gear" class="control-label"></label>
        <input asp-for="Car.Gear" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Cylinders" class="control-label"></label>
        <input asp-for="Car.Cylinders" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.MotorSize" class="control-label"></label>
        <input asp-for="Car.MotorSize" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.ZeroToOneHundred" class="control-label"></label>
        <input asp-for="Car.ZeroToOneHundred" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Length" class="control-label"></label>
        <input asp-for="Car.Length" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.NumOffWheels" class="control-label"></label>
        <input asp-for="Car.NumOffWheels" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.MaxPull" class="control-label"></label>
        <input asp-for="Car.MaxPull" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Car.Weight" class="control-label"></label>
        <input asp-for="Car.Weight" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Car.ForSale" class="control-label"></label>
        <input asp-for="Car.ForSale" type="checkbox" class="form-check-input" />
    </div>

    <div class="form-group">
        <label asp-for="CarImage">Upload billede</label>
        <input asp-for="CarImage" type="file" class="form-control" accept="image/*"  />
    </div>

    <button type="submit" class="btn btn-primary">Opret bil</button>
</form>
