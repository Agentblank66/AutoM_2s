@page
@model AutoMaegler.Pages.LogIn.LogInPageModel
@{
}

<div class="container">
    <div style="color: red">
        @Model.Message
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="UserName" class="col-form-label text-white"></label>
            <div>
                <input asp-for="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label text-white"></label>
            <div>
                <input asp-for="Password" />
            </div>
        </div>
        <div class="form-group mt-1">
            <button class="btn btn-outline-light">Log in</button>
        </div>
    </form>
</div>
