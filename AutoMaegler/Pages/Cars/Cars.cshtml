@page
@model AutoMaegler.Pages.Cars.CarModel
@{
}



    <style>
        body {
            font-family: sans-serif;
        }

        main {
            color: gray;
            padding: 20px;
        }

        .side-overlay {
            position: fixed;
            top: 0;
            right: -50%;
            width: 50%;
            height: 100%;
            background-color: #fff;
            box-shadow: -2px 0 10px rgba(0,0,0,0.3);
            z-index: 1000;
            transition: right 0.3s ease-in-out;
            padding: 20px;
        }

            .side-overlay.open {
                right: 0;
            }

        .overlay-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

            .overlay-header h3 {
                margin: 0;
            }

        .close-btn {
            font-size: 24px;
            background: none;
            border: none;
            cursor: pointer;
        }
    </style>

    <h2>Eksempel på formular</h2>
    <form action="#" method="post">

        <!-- Tekstinput -->
        <label for="navn">Navn:</label>
        <input type="text" id="navn" name="navn"><br><br>

        <!-- Dropdowns -->
        <label for="valg1">Vælg mærke:</label>
        <select id="valg1" name="valg1">
            <option value="option1">Audi</option>
            <option value="option2">BMW</option>
            <option value="option3">Citroen</option>
        <option value="option3">Ford</option>
        <option value="option3">Ferrari</option>
        <option value="option3">Fisker</option>
        <option value="option3">Lamborghini</option>
        <option value="option3">Mazda</option>
        <option value="option3">Opel</option>
        <option value="option3">Toyota</option>
        <option value="option3">Tesla</option>
        </select><br><br>

        <label for="valg2">Vælg drivmåde:</label>
        <select id="valg2" name="valg2">
            <option value="optionA">Benzin</option>
            <option value="optionB">Diesel</option>
            <option value="optionC">Hybrid</option>
            <option value="optionD">ElBil</option>

        </select><br><br>

        <label for="valg3">Vælg sorteringsmåder:</label>
        <select id="valg3" name="valg3">
            <option value="ja">Ja</option>
            <option value="nej">Nej</option>
            <option value="måske">Måske</option>
        </select><br><br>

        <!-- Slider -->
        <label for="justerbar">Juster Pris (0-100):</label>
        <input type="range" id="justerbar" name="justerbar" min="0" max="100">
        <span id="sliderValue">50</span><br><br>

        <!-- Slider -->
        <label for="justerbar">Juster KM (0-100):</label>
        <input type="range" id="justerbar" name="justerbar" min="0" max="100">
        <span id="sliderValue">50</span><br><br>

        <!-- Knap til at åbne overlay -->
        <button type="button" onclick="openOverlay()">Vælg flere felter</button><br><br>

        <!-- Submit-knap -->
        <input type="submit" value="Send">

        <!-- Side Overlay -->
        <div class="side-overlay" id="sideOverlay">
            <div class="overlay-header">
                <h3>Flere valgmuligheder</h3>
                <button type="button" class="close-btn" onclick="closeOverlay()">&times;</button>
            </div>
            <label><input type="checkbox" name="ekstra[]" value="felt1"> Mikro</label><br>
            <label><input type="checkbox" name="ekstra[]" value="felt2"> Stationcar</label><br>
            <label><input type="checkbox" name="ekstra[]" value="felt3"> SUV</label><br>
            <label><input type="checkbox" name="ekstra[]" value="felt4"> Sedan</label><br><br>
            <label><input type="checkbox" name="ekstra[]" value="felt5"> Hatchback</label><br><br>
            <label><input type="checkbox" name="ekstra[]" value="felt6"> Cabriolet</label><br><br>


            <button type="button" onclick="closeOverlay()">OK</button>
        </div>

    </form>

<table>
    <tbody>
        @if (Model.Car != null)
        {
            foreach (var Car in Model.Car)
            {
                <tr class="btn-secondary">
                    <td>
                        @Car.Id
                    </td>
                    <td>
                        @Car.Name
                    </td>
                    <td>
                        @Car.Price
                    </td>
                </tr>
            }
        }
    </tbody>
</table>




    <script>
        const slider = document.getElementById("justerbar");
        const sliderValue = document.getElementById("sliderValue");

        slider.addEventListener("input", function () {
            sliderValue.textContent = slider.value;
        });

        function openOverlay() {
            document.getElementById("sideOverlay").classList.add("open");
        }

        function closeOverlay() {
            document.getElementById("sideOverlay").classList.remove("open");
        }
    </script>