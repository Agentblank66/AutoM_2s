@{
}



<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

   

 

    .container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .gallery img {
        width: 100%;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .details {
        grid-column: 1 / 2;
    }

        .details h2 {
            margin-top: 1rem;
            font-size: 1.5rem;
        }

    .price {
        color: #d32f2f;
        font-weight: bold;
        font-size: 1.3rem;
        margin: 0.5rem 0;
    }

    .specs {
        margin-top: 1rem;
        width: 100%;
        border-collapse: collapse;
    }

        .specs th, .specs td {
            padding: 0.5rem;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

    /*        */

    html, body {
        height: 100% !important;
        margin: 0 !important;
        padding: 0 !important;
    }

    body {
        display: flex !important;
        flex-direction: column !important;
        font-family: Arial, sans-serif !important;
 
    
        line-height: 1.6 !important;
    }


    main {
        flex: 1 !important;
    }

    

  
</style>


